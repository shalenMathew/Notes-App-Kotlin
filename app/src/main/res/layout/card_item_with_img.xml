<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brand_color"
            android:id="@+id/relative_layout"
            >

            <TextView
                android:id="@+id/card_item_img_title"
                android:layout_width="@dimen/_140mdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18mdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Completing Notes and Homework "
                android:textColor="@color/black"
                android:textSize="@dimen/_20mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:maxLines="2"
                android:ellipsize="end"
                />





            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                android:layout_marginBottom="@dimen/_10mdp"
                app:cardCornerRadius="20dp"
                android:layout_toEndOf="@id/card_item_img_title"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginEnd="@dimen/_10mdp"
              app:cardElevation="0dp"
                >

                <ImageView
                    android:id="@+id/card_item_img"
                    android:layout_width="@dimen/_110mdp"
                    android:layout_height="@dimen/_110mdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/card_item_img_description"
                android:layout_width="@dimen/_140mdp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_18mdp"
                android:layout_marginTop="@dimen/_75mdp"
                android:ellipsize="end"
                android:maxLines="3"
                android:singleLine="false"
                android:text="The lorem ipsum gets its name from the Latin phrase Neque porro quisquam est qui dolorem ipsum quia dolor sit amet. which translates to â€œNor is there anyone who loves or pursues or desires to obtain pain of itself, because it is pain."
                android:textColor="@color/black"
                android:textStyle="bold" />


        </RelativeLayout>


            <ImageView
                android:id="@+id/card_item_img_star"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_15mdp"
                android:layout_marginEnd="@dimen/_15mdp"
                android:src="@drawable/star_outline" />

<!--            <CheckBox-->
<!--                android:id="@+id/card_item_star"-->
<!--                android:layout_width="@dimen/_30mdp"-->
<!--                android:layout_height="@dimen/_30mdp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_marginTop="@dimen/_15mdp"-->
<!--                android:layout_marginEnd="@dimen/_12mdp"-->
<!--                android:button="@drawable/selector_whislist_item"-->
<!--                app:buttonTint="@color/black"-->
<!--                />-->

        </RelativeLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>
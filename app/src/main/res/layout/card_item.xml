<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/brand_color"
            android:id="@+id/relative_layout"
            >

            <TextView
                android:id="@+id/card_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/card_item_star"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="2"
                android:text="Title demo"
                android:textColor="@color/black"
                android:textSize="@dimen/_20mdp" />



            <TextView
                android:id="@+id/card_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_item_title"
                android:layout_marginStart="@dimen/_18mdp"
                android:layout_marginTop="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_18mdp"
                android:maxLines="3"
                android:text="The lorem ipsum gets its name from the Latin phrase Neque porro quisquam est qui dolorem ipsum quia dolor sit amet. which translates to â€œNor is there anyone who loves or pursues or desires to obtain pain of itself, because it is pain."
                android:textColor="@color/black"
                android:textStyle="bold"
                android:ellipsize="end"
                android:singleLine="false"

                android:layout_marginBottom="@dimen/_15mdp"
                />

            <ImageView
                android:id="@+id/card_item_star"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_15mdp"
                android:layout_marginEnd="@dimen/_12mdp"
                android:src="@drawable/star_outline" />

<!--            <CheckBox-->
<!--                android:id="@+id/card_item_star"-->
<!--                android:layout_width="@dimen/_30mdp"-->
<!--                android:layout_height="@dimen/_30mdp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_marginTop="@dimen/_15mdp"-->
<!--                android:layout_marginEnd="@dimen/_12mdp"-->
<!--                android:button="@drawable/selector_whislist_item"-->
<!--                app:buttonTint="@color/black"-->
<!--                />-->

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>